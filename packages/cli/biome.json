{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "formatter": {
        "enabled": true,
        "indentWidth": 2,
        "indentStyle": "space",
        "ignore": ["dist/**/*"]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        },
        "ignore": ["dist/**/*"]
    },
    "json": {
        "formatter": {
            "indentStyle": "space",
            "indentWidth": 4
        }
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded",
            "quoteStyle": "single",
            "bracketSameLine": false
        }
    }
}
